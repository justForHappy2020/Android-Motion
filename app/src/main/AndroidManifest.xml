<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.motion">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 这个可写可不写
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <!--腾讯Bugly所需权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />


    <application
        android:name=".MotionApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">



        <!--
        Bugly调试模式的行为特性如下：
        ·输出详细的Bugly SDK的Log；
        ·每一条Crash都会被立即上报；
        ·自定义日志将会在Logcat中输出。
        建议在测试阶段建议设置成true，发布时设置为false。
        -->

        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />

        <activity android:name=".Activity.me_activity_downloaded_courses"></activity>
        <activity
            android:name=".Activity.me_activity_bodydata_main"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.me_activity_bodydata_addfile"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.sport_activity_course_completed"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.BaseNetworkActivity" />
        <activity android:name=".Activity.sport_activity_course_detail" />
        <activity
            android:name=".Activity.sport_activity_course_start"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Activity.sport_activity_course_action_detail" />
        <activity android:name=".Activity.search_result_activity" />
        <activity android:name=".Activity.sport_activity_course_selection" />
        <activity android:name=".Activity.search_course_activity" />
        <activity android:name=".Activity.me_activity_mycourse" />
        <activity android:name=".Activity.me_activity_mycollections" />
        <activity android:name=".Activity.me_activity_help" />
        <activity android:name=".Activity.me_activity_setting" />
        <activity
            android:name=".Activity.viewpager_activity_main"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->

        </activity>
        <activity
            android:name=".Activity.me_activity_bindphone_usephone"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.me_activity_bindphone_changephone"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.me_activity_bindphone_usewechat"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.register_activity_register"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.my_activity_me_data"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.me_activity_help_my_feedback"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
    </application>

</manifest>