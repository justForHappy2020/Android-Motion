<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/me_view_bg_color"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/meSettingGoBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow_white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="搜索课程"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#3E3C42"
            android:src="@drawable/left_arrow_white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#EFEFEF">
                    <ImageButton
                        android:id="@+id/searching_button"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/search2"
                        android:scaleType="fitXY">

                    </ImageButton>

                    <EditText
                        android:id="@+id/text_input_search"
                        android:layout_width="274dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EFEFEF"
                        android:hint="大家都在搜 [宠粉嘉年华] "
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="#686868"
                        android:textSize="17dp">

                    </EditText>
</LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/quit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="Arial-regular"
                    style="?android:attr/borderlessButtonStyle">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="31dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/show_searching_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索记录"
                    android:layout_marginLeft="27dp"
                    android:textColor="#414141"
                    android:textSize="17dp">

                </TextView>

                <Button
                    android:id="@+id/clean_history"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="210dp"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/trashbin"
                    android:text="清除记录"
                    android:textColor="#B2B2B2"
                    style="?android:attr/borderlessButtonStyle">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.library.AutoFlowLayout
                    android:id="@+id/flowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="15dp"></com.example.library.AutoFlowLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
