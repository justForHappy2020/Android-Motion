<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/homepage_types_radius_white"
    android:elevation="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_course_tag_group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/homepage_course_group_header_puple"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_course_tag_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄分类"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/homepage_homepage_tv_age"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:paddingBottom="10dp">


        <TableRow
            android:id="@+id/tr_tag_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_course_tag_img_1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/picture2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_course_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="为3-6岁(幼儿园)   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="定制课程" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more_tag_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rightarrow" />

        </TableRow>

        <TableRow
            android:id="@+id/tr_tag_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_course_tag_img_2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/picture2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_course_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="为3-6岁(幼儿园)   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="定制课程" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more_tag_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rightarrow" />

        </TableRow>

        <TableRow
            android:id="@+id/tr_tag_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_course_tag_img_3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/picture2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_course_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="为3-6岁(幼儿园)   " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="定制课程" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more_tag_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rightarrow" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_more_course_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="查看更多目标分类"
        android:textColor="@color/black_text"
        android:textStyle="bold" />

</LinearLayout>

