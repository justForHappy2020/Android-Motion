<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="11dp"
    android:layout_marginTop="17dp"
    android:layout_marginEnd="11dp"
    android:background="@drawable/me_item_mycourse_favorite_round"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="20dp"
    android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/meMycourseHistoryImg"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:src="@drawable/me_mycourse_history_img"
            android:padding="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meMycourseHistoryName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="篮球培优课"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meMycourseHistoryName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="适合4到6岁孩子练习" />

            <TextView
                android:id="@+id/meMycourseHistoryName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热身运动/体育达标系列"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>
                <TextView
                    android:id="@+id/meMycourseHistoryTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
