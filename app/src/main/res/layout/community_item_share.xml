<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/item_share_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView

            android:id="@+id/share_users_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/sucai"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/users_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="0.5"
            android:textColor="#353535"
            tools:text="USER_NAME" />

        <Button
            android:id="@+id/share_follow"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/button_radius_white_stroke"
            android:text="@string/community_share_btn_follow" />

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#383837"
        android:textStyle="bold"
        tools:text="运动减肥打卡 慢跑10公里，最近都是笑得腹肌都出来了哈哈哈哈这后面会被自动省略" />

    <ImageView
        android:id="@+id/content_pics"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/scenery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postlike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginRight="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/praises"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="10sp"
            tools:text="like_num" />

        <ImageView
            android:id="@+id/postcomment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="10sp"
            tools:text="comment_num" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star_orange" />

    </LinearLayout>
</LinearLayout>