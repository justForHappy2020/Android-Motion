<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"></corners>
                    <solid android:color="@color/tag_selected"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"></corners>
                    <solid android:color="@color/tag_unselected"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>